<h1>Listing Goals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Purpose</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for goal <- @goals do %>
    <tr>
      <td><%= goal.user_id %></td>
      <td><%= goal.name %></td>
      <td><%= goal.purpose %></td>

      <td>
        <span><%= link "Show", to: Routes.goal_path(@conn, :show, goal) %></span>
        <span><%= link "Edit", to: Routes.goal_path(@conn, :edit, goal) %></span>
        <span><%= link "Delete", to: Routes.goal_path(@conn, :delete, goal), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Goal", to: Routes.goal_path(@conn, :new) %></span>
